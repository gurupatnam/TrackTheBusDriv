<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sigta1"
    tools:context="com.example.guru.trackthebusdriv.MainActivity">

    <EditText

        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/roundededit"
        android:drawableLeft="@drawable/icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:id="@+id/editText4"
        android:hint="BUSNO"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/roundededit"
        android:drawableLeft="@drawable/lockgp"
        android:id="@+id/editText5"
        android:hint="PASSWORD"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/roundededit"
        android:drawableLeft="@drawable/maplocalization"
        android:id="@+id/editText3"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:hint="AREA"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_above="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="29dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/roundededit"
        android:drawableLeft="@drawable/phonebook"
        android:id="@+id/editText2"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:hint="PHONE"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_above="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginBottom="29dp" />

    <EditText

        android:inputType="textPersonName"
        android:ems="10"
        android:drawableLeft="@drawable/userser"
        android:background="@drawable/roundededit"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textColor="#111111"
        android:hint="USERNAME"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:text="LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:background="@drawable/roundbutton"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/button2" />

    <Button
        android:text="SIGNUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/roundbutton"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

</RelativeLayout>
